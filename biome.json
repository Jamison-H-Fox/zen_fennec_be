{
  "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "performance": {
        "noDelete": "off",
        "noAccumulatingSpread": "off"
      },
      "correctness": {},
      "style": {
        "noParameterAssign": "off",
        "noUselessElse": "off"
      },
      "complexity": {
        "noForEach": "off",
        "useLiteralKeys": "off",
        "useArrowFunction": "off"
      },
      "suspicious": {
        "noThenProperty": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "all"
    },
    "globals": [
      "expect",
      "describe",
      "it",
      "jest",
      "beforeEach",
      "fail",
      "afterEach"
    ]
  }
}
